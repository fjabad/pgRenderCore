# cmake/GraphicsAbstractionConfig.cmake.in
@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Buscar dependencias necesarias
if(@GFX_BUILD_SDL_BACKEND@)
    find_dependency(SDL3)
endif()

if(@GFX_BUILD_GLFW_BACKEND@)
    find_dependency(glfw3)
endif()

# Incluir targets exportados
include("${CMAKE_CURRENT_LIST_DIR}/GraphicsAbstractionTargets.cmake")

check_required_components(GraphicsAbstraction)

# Proporcionar informaci√≥n sobre componentes disponibles
set(GraphicsAbstraction_SDL3_FOUND @GFX_BUILD_SDL_BACKEND@)
set(GraphicsAbstraction_GLFW_FOUND @GFX_BUILD_GLFW_BACKEND@)
